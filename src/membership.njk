      <!-- Premium Tier -->
      <div class="pricing-card featured">
        <div class="pricing-tier">Premium</div>
        <div class="pricing-price">$9<span>/month</span></div>
        <ul class="pricing-features">
          <li><span class="check">✓</span> Everything in Free</li>
          <li><span class="check">✓</span> All premium courses</li>
          <li><span class="check">✓</span> Discord "Premium" role</li>
          <li><span class="check">✓</span> Early access to new content</li>
          <li><span class="check">✓</span> Direct support from NYTEMODE</li>
