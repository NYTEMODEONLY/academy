---
layout: layouts/base.njk
showHeader: true
---

<div class="section section-dark" style="padding-top: 120px;">
  <div class="container container-narrow">
    <nav class="breadcrumb">
      <a href="/">Academy</a>
      <span class="breadcrumb-separator">/</span>
      <a href="/news/">News</a>
      <span class="breadcrumb-separator">/</span>
      <span>{{ title }}</span>
    </nav>

    <article>
      <header class="mb-xl">
        <div class="mb-md">
          <span class="pill">{{ category }}</span>
        </div>
        <h1 class="headline headline-lg mb-md">{{ title }}</h1>
        <div class="article-meta" style="display: flex; align-items: center; gap: 16px; color: var(--text-muted); font-size: 0.875rem;">
          <time>{{ date | readableDate }}</time>
          <span>Â·</span>
          <span>By NYTEMODE</span>
        </div>
      </header>

      {% if thumbnail %}
      <img src="{{ thumbnail }}" alt="{{ title }}" style="width: 100%; border-radius: 16px; margin-bottom: 48px;">
      {% endif %}

      <div class="content">
        {{ content | safe }}
      </div>

      <footer class="mt-xl" style="padding-top: 24px; border-top: 1px solid var(--border);">
        <div class="share-buttons" style="display: flex; align-items: center; gap: 16px;">
          <span style="color: var(--text-muted); font-size: 0.875rem;">Share:</span>
          <a href="https://twitter.com/intent/tweet?url={{ site.url }}{{ page.url }}&text={{ title }}" target="_blank" rel="noopener" class="btn btn-outline btn-sm">
            X
          </a>
          <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ site.url }}{{ page.url }}&title={{ title }}" target="_blank" rel="noopener" class="btn btn-outline btn-sm">
            LinkedIn
          </a>
          <button class="btn btn-outline btn-sm" onclick="navigator.clipboard.writeText(window.location.href)">
            Copy Link
          </button>
        </div>
      </footer>
    </article>
  </div>
</div>

<!-- Related Articles -->
<div class="section section-dark">
  <div class="container">
    <h2 class="headline headline-md text-center mb-xl">Related Articles</h2>
    <div class="grid grid-3">
      {% set relatedNews = collections.news | limit(3) %}
      {% for article in relatedNews %}
        {% if article.data.slug != slug %}
          {% include "partials/news-card.njk" %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
