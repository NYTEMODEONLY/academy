<section class="section section-dark" style="padding-top: 120px;">
  <div class="container">
    <div class="section-header text-center">
      <h1 class="headline headline-lg mb-md">Unlock Everything</h1>
      <p class="subhead">Premium membership for serious learners</p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-2" style="max-width: 800px; margin: 0 auto;">
      <!-- Free Tier -->
      <div class="pricing-card">
        <div class="pricing-tier">Free</div>
        <div class="pricing-price">$0<span>/forever</span></div>
        <ul class="pricing-features">
          <li><span class="check">✓</span> All free courses</li>
          <li><span class="check">✓</span> AI news feed</li>
