<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | {{ site.name }}</title>
  <meta name="description" content="{{ description or site.description }}">

  <!-- Open Graph -->
  <meta property="og:title" content="{{ title }} | {{ site.name }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:image" content="{{ site.url }}/images/og-image.jpg">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }} | {{ site.name }}">
  <meta name="twitter:description" content="{{ description or site.description }}">

  <!-- Fonts are loaded via CSS @import -->
  <link rel="stylesheet" href="/css/global.css">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

  <!-- Netlify Identity Widget (for auth flows) -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

  <!-- Supabase Configuration (public keys only - safe for client) -->
  {% if supabase.url %}
  <script>
    window.SUPABASE_URL = '{{ supabase.url }}';
    window.SUPABASE_ANON_KEY = '{{ supabase.anonKey }}';
  </script>
  {% endif %}
</head>
<body>
  {% if showHeader %}
  {% include "partials/header.njk" %}
  {% endif %}

  <main>
    {{ content | safe }}
  </main>

  {% if showFooter !== false %}
  {% include "partials/footer.njk" %}
  {% endif %}

  <script src="/js/main.js" defer></script>
  <script src="/js/progress.js" defer></script>

  <!-- Handle Netlify Identity redirect after login -->
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>
